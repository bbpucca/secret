<h1>To connect</h1>

  <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
	  <%= f.check_box :remember_me %>
	    <span>Rimember me</span>
    <% end %>

    <%= f.submit "To connect" %>
  <% end %>


<br>
<p>Don't you have an account yet?</p>
